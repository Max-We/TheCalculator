<LinearLayout
        android:id="@+id/pad_layout_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:id="@+id/Pad_row_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_op_cube_root"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/x_root_cube" />

            <Button
                android:id="@+id/btn_op_cube"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/x_power_of_3" />

            <Button
                android:id="@+id/btn_op_power_inverse"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/x_power_of_inverse" />

            <Button
                android:id="@+id/btn_fun_factorial"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="!" />

            <Button
                android:id="@+id/btn_op_permille"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/permille" />

            <Button
                android:id="@+id/btn_const_eulers"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="e" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pad_row_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_op_square_root"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/x_root_square" />

            <Button
                android:id="@+id/btn_op_square"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/x_power_of_2" />

            <Button
                android:id="@+id/btn_sep_openBraces"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="(" />

            <Button
                android:id="@+id/btn_sep_closeBraces"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")" />

            <Button
                android:id="@+id/btn_op_percent"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/percent" />

            <Button
                android:id="@+id/btn_const_pi"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/pi" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pad_row_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_num_1"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1" />

            <Button
                android:id="@+id/btn_num_2"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2" />

            <Button
                android:id="@+id/btn_num_3"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3" />

            <Button
                android:id="@+id/btn_op_plus"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/plus" />

            <Button
                android:id="@+id/btn_fun_sin"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sin" />

            <Button
                android:id="@+id/btn_fun_sin_inverse"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/sin_inverse" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pad_row_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_num_4"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4" />

            <Button
                android:id="@+id/btn_num_5"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5" />

            <Button
                android:id="@+id/btn_num_6"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6" />

            <Button
                android:id="@+id/btn_op_subtract"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/minus" />

            <Button
                android:id="@+id/btn_fun_cos"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cos" />

            <Button
                android:id="@+id/btn_fun_cos_inverse"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cos_inverse" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pad_row_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_num_7"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7" />

            <Button
                android:id="@+id/btn_num_8"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8" />

            <Button
                android:id="@+id/btn_num_9"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9" />

            <Button
                android:id="@+id/btn_op_multiply"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/multiply" />

            <Button
                android:id="@+id/btn_fun_tan"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tan" />

            <Button
                android:id="@+id/btn_fun_tan_inverse"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/tan_inverse" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Pad_row_6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/btn_delete"
                style="@style/Pad_btn_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tint="@color/colorRed"
                app:srcCompat="@drawable/ic_baseline_backspace_white" />

            <Button
                android:id="@+id/btn_num_0"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0" />

            <Button
                android:id="@+id/btn_sep_comma"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="." />

            <Button
                android:id="@+id/btn_op_divide"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/divide" />

            <Button
                android:id="@+id/btn_fun_log"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/log" />

            <Button
                android:id="@+id/btn_fun_ln"
                style="@style/Pad_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ln" />
        </LinearLayout>
    </LinearLayout>
