<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--App Basic-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Basic Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Status Bar-->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!--Font-->
        <item name="android:fontFamily">@font/productsans_regular</item>
    </style>

    <!--Custom (Buttons)-->
    <style name="Pad_btn">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_PadButton</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Pad_btn_red">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:textColor">@color/colorRed</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_PadButton</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Result_btn">
        <item name="android:background">@drawable/btn_rounded_md</item>
        <item name="android:textColor">@color/colorVeryDark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/textSize_ResultButton</item>
        <item name="android:stateListAnimator">@animator/btn_result_unelevate</item>
    </style>
</resources>